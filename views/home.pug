extends layouts/main
include mixins/videoBlock  
 //- 화면에 직접 적는 대신->재활용개념

 

block content
    .home-videos
        each item in videos 

            //- mixin을 호출
            +videoBlock({ 
                id:item.id,
                title:item.title,
                views:item.views,
                videoFile:item.fileUrl
            })
              //- 
                each 변수명 in videoController에서 전달한 인수 이름 ->videos 배열에서 하나씩 템플릿을 적용
                이 정보들이 videoBlock으로 전달되어서 이 함수를 실행시킬것임 그리고 그 함수는 html로 내보냄

           